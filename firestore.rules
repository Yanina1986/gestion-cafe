rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Mensajes de chat: solo usuarios autenticados pueden leer y crear;
    // solo pueden crear mensajes con senderId == request.auth.uid
    match /chats/{chatId}/messages/{msgId} {
      allow read: if request.auth != null && isParticipant(chatId);
      allow create: if request.auth != null
                    && request.resource.data.senderId == request.auth.uid
                    && isParticipant(chatId);
      allow update, delete: if false;
    }

    // users collection (perfil)
    match /users/{userId} {
      allow read: if request.auth != null && request.auth.uid == userId;
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    function isParticipant(chatId) {
      return exists(/databases/$(database)/documents/chats/$(chatId))
        && get(/databases/$(database)/documents/chats/$(chatId)).data.participants
            .hasAny([request.auth.uid]);
    }
  }
}
